{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<br/>

<a href="{{path('accueil', {id : fiche})}}" type='button' class="btn btn-primary"><i class="fas fa-sign-out-alt"></i> Retour</a>
<br/><br/>

<div class="example-wrapper">
    <div class="text-center">
        <h1>Editer le frais hors forfait: {{frais.libelle}}</h1>
        <br/>
        <hr/>
    </div>

<!-- Affichage du formulaire permettant de modifier un frais hors forfait -->
    <div class="example-wrapper">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-warning">Sauvegarder</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
