{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<a href="{{path('home')}}" type='button' class="btn btn-primary"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>

<h1>Choisir une fiche</h1>

<div class="example-wrapper">
    <h4>Choisir par mois :</h4>
    <select class=form-control>
        <option value=1>Janvier</option>
        <option value=2>Février</option>
        <option value=3>Mars</option>
        <option value=4>Avril</option>
        <option value=5>Mai</option>
        <option value=6>Juin</option>
        <option value=7>Juillet</option>
        <option value=8>Août</option>
        <option value=9>Septembre</option>
        <option value=10>Octobre</option>
        <option value=11>Novembre</option>
        <option value=12>Décembre</option>
    </select>

    </br>
    
    {% for uneFiche in fiches %}
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    Date de création : {{uneFiche.dateCreation|date("d-m-Y")}}<br/>
                    Date de modification : {{uneFiche.dateModif|date("d-m-Y")}}<br/>
                    Montant remboursé : {{uneFiche.montantRembourse}}<br/>
                    Etat : {{uneFiche.idEtat.libelle}}<br/>
                    <a href="{{path('accueil', {id : uneFiche.id})}}" >Editer</a>
                </div>
            </div>
        </div>
        <hr/>
    {% endfor %}
    
</div>
{% endblock %}
