{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<a href="{{path('home')}}" type='button' class="btn btn-primary"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>

<h1>Choisir une fiche</h1>

<div class="example-wrapper">
    <h4>Choisir le mois :</h4>
    <form method='Post' action='{{path('choixficheParMois')}}'>
        <select class='form-control' name='mois'>
            <option value='00' selected>Tous</option>
            <option value='01'>Janvier</option>
            <option value='02'>Février</option>
            <option value='03'>Mars</option>
            <option value='04'>Avril</option>
            <option value='05'>Mai</option>
            <option value='06'>Juin</option>
            <option value='07'>Juillet</option>
            <option value='08'>Août</option>
            <option value='09'>Septembre</option>
            <option value='10'>Octobre</option>
            <option value='11'>Novembre</option>
            <option value='12'>Décembre</option>
        </select>
        <button type='submit' class="btn btn-primary">Valider</button>
    </form>

    </br>
    
    {% for uneFiche in fiches %}
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    Date de création : {{uneFiche.dateCreation|date("d-m-Y")}}<br/>
                    Date de modification : {{uneFiche.dateModif|date("d-m-Y")}}<br/>
                    Montant remboursé : {{uneFiche.montantRembourse}}<br/>
                    Etat : {{uneFiche.idEtat.libelle}}<br/>
                    <a href="{{path('accueil', {id : uneFiche.id})}}" >Editer</a>
                </div>
            </div>
        </div>
        <hr/>
    {% endfor %}
    
</div>
{% endblock %}
