{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Choisir une fiche</h1>

<div class="example-wrapper">
    <h4>Choisir le mois :</h4>
    <form method='Post' action='{{path('choixfiche')}}'>
        <select class='form-control' name='mois'>
            <option value='00' selected>Tous</option>
            <option value='01'>Janvier</option>
            <option value='02'>Février</option>
            <option value='03'>Mars</option>
            <option value='04'>Avril</option>
            <option value='05'>Mai</option>
            <option value='06'>Juin</option>
            <option value='07'>Juillet</option>
            <option value='08'>Août</option>
            <option value='09'>Septembre</option>
            <option value='10'>Octobre</option>
            <option value='11'>Novembre</option>
            <option value='12'>Décembre</option>
        </select>
        <button type='submit' class="btn btn-primary">Valider</button>
    </form>
    </div>

    </br><hr/>
    <img src="https://thumbs.gfycat.com/ImpressiveLawfulIberianbarbel-size_restricted.gif" width="100px"/>
        <a href='{{ path("ajouterFiche") }}' type='button'  class="btn btn-success">Ajouter Fiche</a>
        <hr/>
    </br>
<table class="table table-light">
  <thead class="thead-light">
    <tr>
      <th scope="col">Date de création</th>
      <th scope="col">Date de modification</th>
      <th scope="col">Montant remboursé</th>
      <th scope="col">Etat</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  {% for uneFiche in fiches %}

  {% if idVisiteur == uneFiche.idVisiteur.id %}
  <tr>
    <th scope="row">{{uneFiche.dateCreation|date("d-m-Y")}}</th>
    <td>{{uneFiche.dateModif|date("d-m-Y")}}</td>
    <td> {{uneFiche.montantRembourse}}</td>
    <td>{{uneFiche.idEtat.libelle}}</td>    
    <td><a href="{{path('accueil', {id : uneFiche.id})}}" type='button' class="btn btn-warning"  {% if uneFiche.idEtat.id == 2 %} hidden {% endif %}>Editer</a></td>
  </tr>
  {% endif %}

  {% endfor %}
  
  </tbody>
</table>

