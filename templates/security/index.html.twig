{% extends 'base.html.twig' %}


{% block body %}
<form method = "post">
    {% if error %}
        <div class = "alert alert-danger">{{ error.messageKey }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
    <label for="inputUsername" class="sr-only">Login</label>
    <input type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" placeholder="login" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}">

    <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
</form>

{% endblock %}
